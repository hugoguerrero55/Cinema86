@model Cinema86Movie.Models.CambiarPassword

@{
    ViewBag.Title = "Cambio de Contraseña";
    Layout = "~/Views/Shared/_master.cshtml";

}

<!-- breadcrumb area start -->
<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-area-content">
                    <h1>Ingreso al Sitio</h1>
                </div>
            </div>
        </div>
    </div>
</section><!-- breadcrumb area end -->

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="details-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-9">
                    <div class="details-content">
                        <div class="details-overview">
                            <h2>Formulario de acceso</h2>
                            <hr />
                            <p>
                                Capture la clave OPT quele fue enviada a su correo y a continuación, capture la nueva contraseña y hacer clic en el
                                botón CAMBIAR.
                            </p>
                        </div>
                        <div class="details-reply">
                            <form action="#">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="select-container">
                                            <div class="transformers-left">
                                                @Html.LabelFor(model => model.OTP, htmlAttributes: new { @class = "control-label col-md-2" })
                                            </div>
                                            <div class="transformers-right">
                                                @Html.EditorFor(model => model.OTP, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.OTP, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="select-container">
                                            @*<input type="text" placeholder="Email" />*@
                                            <div class="transformers-left">
                                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                                            </div>
                                            <div class="transformers-right">
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                                <i class="icofont icofont-ui-user"></i>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="select-container">
                                            <div class="transformers-left">
                                                @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                                            </div>
                                            <div class="transformers-right">
                                                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })                                                
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="textarea-container">
                                            <div class="transformers-left">
                                                <table>
                                                    <tr>
                                                        <button type="submit" class="theme-btn">Cambiar</button>
                                                        <td><a class="theme-btn" href="@Url.Action("Index", "Home")">Salir</a></td>
                                                        <td><a class="theme-btn" href="@Url.Action("OlvidoPassword", "Login")">Recuperar Contraseña</a></td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

















